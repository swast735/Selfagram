<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:elevation="200dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp" />
    <TextView
        android:id="@+id/age"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="50dp"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/sem"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/age"
        android:layout_marginLeft="40dp"
        android:text="Sem"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/ageno"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/age"
        android:text=""
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/semno"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sem"
        android:layout_toRightOf="@+id/age"
        android:layout_marginLeft="40dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:text="Hello, "
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="22dp" />

    <Button
        android:id="@+id/edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#000000"
        android:text="Edit Profile"
        android:layout_marginTop="50dp"
        android:layout_below="@id/name"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/shno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/n"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:text="Show Notes"
        />
    <Button
        android:id="@+id/edno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/n"
        android:backgroundTint="@color/black"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:text="Edit Notes"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/n"
        app:cardCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp"
        android:layout_below="@id/edit"
        android:backgroundTint="@color/cardview_shadow_start_color">
    <EditText
        android:id="@+id/note"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:background="#00FFFFFF"
        android:hint="@string/add_your_note"
        android:paddingLeft="15dp"
        android:textColorHint="#75000000"
        android:gravity="fill_horizontal"
/>
    <TextView
        android:id="@+id/notep"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:background="#00FFFFFF"
        android:text=""
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="fill_horizontal"
        style=""/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/botton_navigation"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@drawable/selectorsss"
        app:itemIconTint="@drawable/selectorsss"
        app:itemBackground="@android:color/holo_orange_dark"/>
</RelativeLayout>